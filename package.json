{
  "name": "node-ts-tdd-clean-arch",
  "version": "1.0.0",
  "description": "Node.js/Typescript API developed with TDD and Clean Architecture",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "start": "yarn build && node dist/src/index.js",
    "start:local": "ts-node-dev --transpile-only src/index.ts",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "lint": "eslint ./src ./test --ext .ts",
    "lint:fix": "eslint ./src ./test --ext .ts --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mauricio-cantu/node-ts-api-tdd.git"
  },
  "keywords": [
    "node",
    "nodejs",
    "typescript",
    "api",
    "clean-architecture",
    "tdd"
  ],
  "author": "Mauricio Cantu",
  "license": "MIT",
  "dependencies": {
    "module-alias": "^2.2.2"
  },
  "devDependencies": {
    "@types/jest": "^27.0.3",
    "@types/module-alias": "^2.0.1",
    "@types/node": "16",
    "@typescript-eslint/eslint-plugin": "^5.8.1",
    "@typescript-eslint/parser": "^5.8.1",
    "eslint": "^8.5.0",
    "jest": "^27.4.5",
    "ts-jest": "^27.1.2",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.5.4"
  }
}
